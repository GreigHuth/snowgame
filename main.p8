--courtesy of pico8-fandom.com
function mkb_init(enable, btn_emu, ptr_lock)
    -- pass args as bitfield into hardware register
    poke(0x5f2d,(enable   and 1 or 0)
               |(btn_emu  and 2 or 0)
               |(ptr_lock and 4 or 0))
end

   
function set_palette()
    pal(2, 140, 1) --purple to true-blue
    pal(3, 131, 1) --green to blue-green
    pal(4, 129, 1)
    pal(14, 133, 1)
end


function _init()


